{
  "manifest_version": 3,
  "name": "قارئ المقالات الذكي Pro",
  "version": "2.0",
  "description": "يقرأ النص المحدد باستخدام مفتاح API الخاص بك.",
  "permissions": [
    "contextMenus",
    "storage",
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "https://texttospeech.googleapis.com/"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options.html",
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon128.png"
  },
  "icons": {
    "128": "icon128.png"
  }
}
